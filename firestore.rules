service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{document=**} {
      allow read;
      allow write, update, delete: if request.auth.uid != null
    }
    match /suggestionprods/{document=**} {
      allow read, write;
      allow update, delete: if request.auth.uid != null
    }
    match /shop/{document=**} {
      allow read;
      allow write, update, delete: if request.auth.uid != null
    }
    match /users/{document=**} {
      allow read, write, update, delete: if request.auth.uid != null
    }
    match /comments/{document=**} {
      allow read,write;
      allow update, delete: if request.auth.uid != null
    }
    match /school/{document=**} {
      allow read,write;
      allow update, delete: if request.auth.uid != null
    }
  }
}